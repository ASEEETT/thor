  <script>
    // Function to show the bio section
    function showBio() {
      document.querySelector('.bio').style.display = 'none'; // Hide Bio section link
      document.querySelector('.achievements').style.display = 'none'; // Hide Achievements link
      document.querySelector('.future').style.display = 'none'; // Hide Future profession section
      document.querySelector('.history').style.display = 'none'; // Hide History section

      // Show the bio section
      document.getElementById('bio').style.display = 'block';
    }

    // Function to show the achievements section
    function showAchievements() {
      document.querySelector('.bio').style.display = 'none'; // Hide Bio section
      document.querySelector('.achievements').style.display = 'none'; // Hide Achievements link
      document.querySelector('.future').style.display = 'none'; // Hide Future profession section
      document.querySelector('.history').style.display = 'none'; // Hide History section

      // Show the achievements sections
      document.getElementById('sports').style.display = 'block';
      document.getElementById('art').style.display = 'block';
      document.getElementById('education').style.display = 'block';
    }

    // Function to show the future profession section (МҰНАЙШЫ)
    function showFutureProfession() {
      document.querySelector('.bio').style.display = 'none'; // Hide Bio section
      document.querySelector('.achievements').style.display = 'none'; // Hide Achievements link
      document.querySelector('.future').style.display = 'none'; // Hide Future profession link
      document.querySelector('.history').style.display = 'none'; // Hide History section

      // Show the future profession (МҰНАЙШЫ) section
      document.getElementById('oil-profession').style.display = 'block';
    }

    // Function to show the history section (Тарихта қалдыратын із)
    function showHistory() {
      document.querySelector('.bio').style.display = 'none'; // Hide Bio section
      document.querySelector('.achievements').style.display = 'none'; // Hide Achievements link
      document.querySelector('.future').style.display = 'none'; // Hide Future profession section
      document.querySelector('.history').style.display = 'none'; // Hide History section

      // Show the History section
      document.getElementById('history').style.display = 'block';
    }

    // Function to go back to the resume
    function backToResume() {
      document.querySelector('.bio').style.display = 'block'; // Show Bio section
      document.querySelector('.achievements').style.display = 'block'; // Show Achievements link
      document.querySelector('.future').style.display = 'block'; // Show Future profession section
      document.querySelector('.history').style.display = 'block'; // Show History section

      // Hide the achievements sections
      document.getElementById('sports').style.display = 'none';
      document.getElementById('art').style.display = 'none';
      document.getElementById('education').style.display = 'none';

      // Hide the future profession (МҰНАЙШЫ) section
      document.getElementById('oil-profession').style.display = 'none';

      // Hide the bio section
      document.getElementById('bio').style.display = 'none';

      // Hide the history section
      document.getElementById('history').style.display = 'none';
    }
  </script>
</body>
